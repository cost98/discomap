# Environment variables for DiscoMap project

# EEA API Configuration
EEA_API_BASE_URL=https://eeadmz1-downloads-api-appservice.azurewebsites.net/
EEA_EMAIL=your.email@example.com

# PostgreSQL Configuration
POSTGRES_DB=discomap
POSTGRES_USER=discomap
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=5432

# Database Connection (for API and Alembic)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=discomap
DB_USER=discomap
DB_PASSWORD=changeme

# API Server
API_PORT=8000
APP_ENV=production

# Grafana (runs automatically, no --profile needed)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3000

# PgAdmin (optional, use with --profile tools)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Data directories
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed

# Optional: API rate limiting
MAX_REQUESTS_PER_MINUTE=10

