# Custom pgAdmin with pre-configured connections
FROM dpage/pgadmin4:latest

# Copy server configuration
COPY docker/pgadmin/servers.json /pgadmin4/servers.json

# Set permissions
USER root
RUN chown pgadmin:pgadmin /pgadmin4/servers.json
USER pgadmin

# Labels
LABEL maintainer="cosimo <cost98@github>" \
      description="DiscoMap pgAdmin with pre-configured connections" \
      version="1.0.0"
